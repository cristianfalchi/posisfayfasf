
  <div class="message <%= 'color-'+locals.msgType %> animate__animated animate__bounceInRight">
    <div>
        <i class="fa-solid <%= (locals.msgType === 'info') ? 'fa-circle-exclamation' : (locals.msgType === 'success') ? 'fa-circle-check' : (locals.msgType === 'danger') ? 'fa-circle-xmark' : '' %> "></i>
        <p><%= locals.message %></p>
    </div>
    <i id="<%= locals.msgType %>" onclick="handleCloseMessage(this)" class="fa-solid fa-x"></i>
</div>